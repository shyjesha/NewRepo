node{
   stage('SCM Checkout'){
   git 'https://github.com/febyjose/Maven-linuxrepo'
   }
   stage('Build'){
   sh 'mvn clean package'
   }
   stage('deploying to tomcat'){
   sshagent(['tomcat8']) {
   sh 'scp -o StrictHostKeyChecking=no /target/*.jar ubuntu@3.15.190.157:/opt/tomcat8/webapps/'
}
   }
}
